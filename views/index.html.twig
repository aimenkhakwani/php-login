<html>
<head>
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="/assets/css/styles.css" rel="stylesheet" type="text/css">
</head>
<body>
    <div class="well">
        <h1>PHP User Authentication</h1>
        {% if current_user %}
        <p class="pull-right">Hi, {{current_user.getUsername}}! <a href="/log_out">Log Out</a></p>
        {% endif %}
    </div>
    <div class="container">
        {% if alert == 'sign-up-fail' %}
            <div class="alert alert-danger" role="alert"><strong>Sorry</strong>, that username is already taken.</div>
        {% endif %}

        {% if alert == 'log-in-fail' %}
            <div class="alert alert-danger" role="alert"><strong>Sorry</strong>, try logging in again.</div>
        {% endif %}

        {% if alert == 'log-out' %}
            <div class="alert alert-success" role="alert"><strong>Goodbye! </strong>You have logged out.</div>
        {% endif %}
        <div class="col-md-6">
            <h2>Sign Up</h2>
            <form action="/sign_up" method="post">
                <input class="form-control" placeholder="Username" name="username" type="text" required>
                <br>
                <input class="form-control" placeholder="Password" name="password" type="password" required>
                <br>
                <button type="submit" class="btn btn-primary center-block">Sign Up</button>
            </form>
        </div>
        <div class="col-md-6">
            <h2>Log In</h2>
            <form action="/log_in" method="post">
                <input class="form-control" placeholder="Username" name="username" type="text">
                <br>
                <input class="form-control" placeholder="Password" name="password" type="password">
                <br>
                <button class="btn btn-info center-block">Log In</button>
            </form>
        </div>
    </div>
</body>
</html>
